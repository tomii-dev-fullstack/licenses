{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.js",
            "methods": [
                "POST",
                "GET",
                "DELETE",
                "PUT",
                "OPTIONS"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Credentials": "true"
            }
        }
    ],
    "redirects": [
        {
            "source": "/",
            "destination": "https://dashboard-gabiela.vercel.app/dashboard/inventario",
            "statusCode": 301
        },
        {
            "source": "api/(.*)",
            "destination": "/api/index.js",
            "statusCode": 200
        }
    ]
}